@model ECommerce.Models.ViewModels.ProductsView
<h3> This is Product Showcase </h3>
    <div class="row">
        <div class="col-sm-2">
            <form class= method="get" asp-controller="Product" asp-action="ProductShowcase">
                <div class="">
                    <input type="search" placeholder="Search" name="prodsearchkeyword">
                    <input type="submit" value="Search"> 
                </div>
            </form>
            <h4><b>Add a new product</b></h4>
            <form class= method="post" asp-controller="Product" asp-action="AddProduct">
                <div class="form-group">
                    <span asp-validation-for="@Model.product.name"></span>
                    <label asp-for="@Model.product.name"></label>
                    <input class="form-control" asp-for="@Model.product.name">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.product.imageurl"></span>
                    <label asp-for="@Model.product.imageurl"></label>
                    <input class="form-control" asp-for="@Model.product.imageurl">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.product.description"></span>
                    <label asp-for="@Model.product.description"></label>
                    <input class="form-control" asp-for="@Model.product.description">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.product.initial_quantity"></span>
                    <label asp-for="@Model.product.initial_quantity"></label>
                    <input class="form-control" asp-for="@Model.product.initial_quantity">
                </div>
                <input type="submit" value="Create">
            </form>
        </div>
        <div class="col-sm-10">
            <div class="row">
                @foreach(Product product in @Model.productlist)
                {
                    <div class="col-md-2">
                        <div class="thumbnail">
                            <img src="@product.imageurl" alt="Lights" style="width:80px; height:80px">
                            <div class="caption">
                                <p>@product.name</p>
                                <p>@product.description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a>show more</a>
        </div>
    </div>